<body>
     <%= flash[:notice] %>
     
  <h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
        
          
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
        

      </tr>
      <% end %>

  </tbody>
</table>

 
  <div.field>

    <h2>New book</h2>
    <%= form_with model: @book, local: true do |f| %>
      <% if @book. errors.any? %>
      <h3>blank error<%= @book.errors.count %></h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>
      <br>
      <%= f.submit 'Create Book' %>
    
    <% end %>
 </div.field>

</body>
