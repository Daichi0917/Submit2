<h1>Editing Book</h1>
<%= form_with model:@book, url: book_path, local:true do |f| %>
  <% if @book. errors.any? %>
    <h3>blank error<%= @book.errors.count %></h3>
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
  <% end %>

  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path %>
|<%= link_to "Back", books_path %>